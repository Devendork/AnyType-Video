<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/canvas_fullscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:gravity="center">

        <GridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/letter_grid"            
            android:layout_width="fill_parent" 
		    android:layout_height="100dp"
		    android:columnWidth="20dp"
		    android:numColumns="26"
		    android:verticalSpacing="6dp"
		    android:background="#ffffff"
		    android:horizontalSpacing="6dp"
		    android:stretchMode="columnWidth"
		    android:gravity="center"
          />
        
        

        <FrameLayout
            android:id="@+id/canvas_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.83"
            android:background="#ffffff"
            android:orientation="vertical" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/font_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:ems="10"
                android:text="enter font name" />

            <Button
                android:id="@+id/button_reset"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Font" />

            <Button
                android:id="@+id/button_save_canvas"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Canvas" />

            <Switch
                android:id="@+id/switch_delete_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Mode" />

        </LinearLayout>

</LinearLayout>